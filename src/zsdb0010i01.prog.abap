MODULE USER_COMMAND_9000 INPUT.

  CASE OK_CODE.
    WHEN 'CREATE'.
      PERFORM CREATE_SALES_ORDER.

    WHEN 'APPROVE'.
      PERFORM APPROVE_PRICE.
  ENDCASE.

ENDMODULE. " USER_COMMAND_9000 INPUT
