MODULE USER_COMMAND_0100 INPUT.

  G_OK_CODE = OK_CODE.
  CLEAR : OK_CODE.

  CASE G_OK_CODE.
    WHEN 'RFSH'.
      PERFORM MAIN_PROCESS.

    WHEN 'CREA'.
      PERFORM CREATE_PROCESS.
  ENDCASE.

ENDMODULE.
